# =======================================
# APP CONFIGURATION
# =======================================

# APP_DEBUG menentukan apakah aplikasi berjalan dalam mode debug.
# true  = Menampilkan log & error detail (untuk pengembangan)
# false = Menyembunyikan log detail (untuk produksi)
APP_DEBUG=

# APP_PORT menentukan port yang digunakan oleh server aplikasi.
# Contoh: 8080
APP_PORT=

# APP_LOG_LEVEL menentukan tingkat logging.
# Pilihan: DEBUG, INFO, WARN, ERROR, FATAL
APP_LOG_LEVEL=

# APP_DOMAIN menentukan domain atau host aplikasi.
# Contoh: localhost, example.com
APP_DOMAIN=

# APP_SCHEME menentukan skema protokol.
# Contoh: http atau https
APP_SCHEME=


# =======================================
# AUTHENTICATION CONFIGURATION
# =======================================

# AUTH_JWT_SECRET adalah kunci rahasia untuk menandatangani JWT token.
# Gunakan string acak dan kuat.
AUTH_JWT_SECRET=

# AUTH_ACCESS_TOKEN_EXPIRATION menentukan masa berlaku access token.
# Contoh format: 15m (menit), 1h (jam), 1d (hari)
AUTH_ACCESS_TOKEN_EXPIRATION=

# AUTH_REFRESH_TOKEN_EXPIRATION menentukan masa berlaku refresh token.
# Contoh format: 720h (30 hari)
AUTH_REFRESH_TOKEN_EXPIRATION=


# =======================================
# DATABASE CONFIGURATION (PostgreSQL)
# =======================================

# DB_HOST adalah alamat host database.
# Contoh: localhost atau 127.0.0.1
DB_HOST=

# DB_PORT adalah port koneksi database.
# Default PostgreSQL: 5432
DB_PORT=

# DB_USER adalah nama pengguna database.
DB_USER=

# DB_PASS adalah kata sandi pengguna database.
DB_PASS=

# DB_NAME adalah nama database yang digunakan aplikasi.
DB_NAME=


# =======================================
# REDIS CONFIGURATION
# =======================================

# REDIS_HOST adalah alamat host Redis.
# Contoh: localhost atau 127.0.0.1
REDIS_HOST=

# REDIS_PORT adalah port Redis.
# Default: 6379
REDIS_PORT=

# REDIS_PASS adalah kata sandi Redis (kosong jika tidak digunakan).
REDIS_PASS=

# REDIS_DB adalah index database Redis yang digunakan.
# Default: 0
REDIS_DB=


# =======================================
# EMAIL CONFIGURATION (SMTP)
# =======================================

# EMAIL_SMTP_HOST adalah alamat server SMTP.
# Contoh: smtp.gmail.com
EMAIL_SMTP_HOST=

# EMAIL_SMTP_PORT adalah port SMTP.
# Gmail: 587 (TLS), 465 (SSL)
EMAIL_SMTP_PORT=

# EMAIL_SMTP_USER adalah alamat email pengirim (username SMTP).
EMAIL_SMTP_USER=

# EMAIL_SMTP_PASS adalah password atau App Password untuk SMTP.
EMAIL_SMTP_PASS=

# EMAIL_FROM adalah alamat email pengirim yang tampil pada pesan.
EMAIL_FROM=


# =======================================
# OAUTH CONFIGURATION (Google)
# =======================================

# GOOGLE_CLIENT_ID adalah Client ID dari Google OAuth.
GOOGLE_CLIENT_ID=

# GOOGLE_CLIENT_SECRET adalah Client Secret dari Google OAuth.
GOOGLE_CLIENT_SECRET=